<Alloy>
	<View class="wfill hfill padding">
		<ScrollView class="wfill hfill contwfill conthsize vert" backgroundColor="#fff">
			<ImageView class="wfill hsize" image="/images/login_page_logo_title.png" backgroundColor="#eff3f6"></ImageView>
			<Widget src="input-materialdesign" titleHint="Name" id="name"/>
			<View class="wsize hsize horz" right="10" top="10">
				<ImageView height="20" width="20" left="10" image="/images/checkbox_checked.png" value="f" opposite="female" id="male" onClick="gender_chkbox"></ImageView>
				<Label class="h4" left="10" text="Male" color="#696e76"></Label>
				<ImageView height="20" width="20" left="10" image="/images/checkbox_unchecked.png" value='m' opposite="male" id="female" onClick="gender_chkbox"></ImageView>
				<Label class="h4" left="10" text="Female" color="#696e76"></Label>
			</View>
			<Widget src="input-materialdesign" titleHint="Email" id="email"/>
			<Widget src="input-materialdesign" titleHint="Mobile" id="mobile"/>			
			<Widget src="input-materialdesign" titleHint="Password" id="password" password="true"/>   
			<Widget src="nl.fokkezb.button" class="wfill" onClick="doSignup" paramCenter="true" height="40" left="40" right="40" title="Signup" bottom="10" style="bs-success"/>	
			
			<View class="wfill hsize padding20" top="0">
				<View class="grey_line" width="25%" left="0" zIndex="1"></View>
				<!-- <Widget class="wfill hsize" paramCenter="true" src="nl.fokkezb.button" onClick="forgetPassword" title="Forget Password ?" style="bs-link" /> -->
				<View class="grey_line" width="25%" right="0"></View>
			</View>	
		</ScrollView>    			
	</View>
</Alloy>
