<Alloy>
	<View class="wfill hfill" bubbleParent="false">
		<View class="wfill hfill vert" backgroundColor="#eff3f6">
			<ScrollView class="hfill wfill contwfill conthsize vert" backgroundColor="#fff" bottom="50">
				<View class="vert wfill hsize" top="0" id="mother_post">
					<View class="horz wfill hsize">
						<View class="wsize hsize padding">
							<ImageView width="55" height="55" image="/images/asp_square_logo.png"></ImageView>
						</View>
						<View class="vert hsize" width="60%">
							<View class="wfill hsize">
								<Label class="wsize hsize padding h4" id="u_name" color="#000"></Label>
							</View>
							<View class="horz wsize hsize" left="10" onClick="select_group" borderRadius="5" borderColor="gray" borderWidth="1">
								<Label class="wsize hsize h4" id="lb_group" text="Public" gid="a" color="gray" bottom="2" left="5" right="2"></Label>
								<ImageView width="25" height="15" image="/images/btn-down.png"></ImageView>
				 			</View>
						</View>
					</View>
					<View class="vert wfill hsize">
						<TextArea class="h4 wfill hsize small-padding" id="description" hintText="Type Something..." hintTextColor="gray" color="#000"></TextArea>
					</View>
					<View class="vert wfill hsize" id="imageMother">
						
					</View>
				</View> 
			</ScrollView> 
		</View>
		<View class="wfill" height="50" bottom="0" zIndex="10">
			<View class="horz wfill hsize" platform="android" left="0" onClick="mediaOptions">
				<ImageView class="wsize hsize padding" image="/images/blue_pin_logo.png"></ImageView>
				<Label class="wsize hsize h4">Add image...</Label>
			</View>
			<View class="horz wfill hsize" platform="ios" left="0" onClick="mediaOptions">
				<ImageView class="padding" width="40" height="35" image="/images/blue_pin_logo.png"></ImageView>
				<Label class="wsize hsize h4">Add image...</Label>
			</View>			
			<View class="wsize hsize" right="0" onClick="doSubmit">
				<ImageView class="wsize hsize padding" image="/images/blue_send_logo.png"></ImageView>
			</View>
		</View>
	</View>
</Alloy>