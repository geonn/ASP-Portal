<Alloy>
	<View class="wfill hfill" id="grandmother">
	<ScrollView id="mother_view" class="hfill wfill contwfill conthsize vert" backgroundColor="#EEF3F6">
		<View class="wfill" id="img_view" backgroundColor="#000">
			<ImageView class="wfill hsize" image="/images/group_picture_square.png" id="group_img"></ImageView>
			<View class="wsize hsize vert" left="10" bottom="5" backgroundColor="66787878">
				<Label class="wsize hsize h3" left="10" right="10" id="group_name" text="Group Name" color="#e5e5e5"></Label>
				<Label class="wsize hsize h4" left="10" right="10" id="group_member" text="Members" color="#e5e5e5"></Label>
			</View>
		</View>
		<View class="wfill hsize" backgroundColor="#fff">
			<View class="hsize vert" width="25%" left="0" onClick="doleaveGroup">
				<ImageView height="35" width="35" image="/images/g_thick.png"></ImageView>
				<Label class="wsize hsize h5" text="Joined" color="#668CFC"></Label>
			</View>
			<View class="hsize vert" width="25%" left="25%" onClick="addMember">
				<ImageView height="35" width="35" image="/images/p_add.png"></ImageView>
				<Label class="wsize hsize h5" text="Add Members" color="#90949C"></Label>
			</View>
			<View class="hsize vert" width="25%" right="25%">
				<ImageView height="35" width="35" image="/images/p_search.png"></ImageView>
				<Label class="wsize hsize h5" text="Search" color="#90949C"></Label>
			</View>
			<View class="hsize vert" width="25%" right="0" onClick="group_info">
				<ImageView height="35" width="35" image="/images/p_info.png"></ImageView>
				<Label class="wsize hsize h5" text="Info" color="#90949C"></Label>
			</View>
		</View>
		<Label top="10" left="10" text="Group Posts"></Label>
	</ScrollView>
	</View>
</Alloy>